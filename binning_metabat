## create contigs using SPAdes
#running into error "you cannot specify any data types except a single paired-end library in metaSPAdes mode!"
#remedy this by running without --meta option
	
python3 /home/lexi/miniconda3/envs/spades/bin/spades.py --pe1-1 ../pumice1/pumice1_FP.fastq --pe1-2 ../pumice1/pumice1_RP.fastq --pe2-1 ../pumice2/pumice2_FP.fastq --pe2-2 ../pumice2/pumice2_RP.fastq --pe3-1 ../pumice3/pumice3_FP.fastq --pe3-2 ../pumice3/pumice3_RP.fastq -o ./spades_compiled


#map reads back to assembly using bbmap

bbmap.sh in1=/home/lexi/Pumice/pumice1/pumice1_FP.fastq in2=/home/lexi/Pumice/pumice1/pumice1_RP.fastq ref=../spades_compiled/contigs.fasta out=p1_compiled_mapped.sam covstats=covstats.txt basecov=basecov.txt bincov=bincov.txt
bbmap.sh in1=/home/lexi/Pumice/pumice2/pumice2_FP.fastq in2=/home/lexi/Pumice/pumice2/pumice2_RP.fastq ref=../spades_compiled/contigs.fasta out=p2_compiled_mapped.sam covstats=covstats.txt basecov=basecov.txt bincov=bincov.txt
bbmap.sh in1=/home/lexi/Pumice/pumice3/pumice3_FP.fastq in2=/home/lexi/Pumice/pumice3/pumice3_RP.fastq ref=../spades_compiled/contigs.fasta out=p3_compiled_mapped.sam covstats=covstats.txt basecov=basecov.txt bincov=bincov.txt


#convert .sam to .bam with SAMtools, in samtools conda env

samtools view -bS p1_compiled_mapped.sam > p1_compiled_mapped.bam
samtools view -bS p2_compiled_mapped.sam > p2_compiled_mapped.bam
samtools view -bS p3_compiled_mapped.sam > p3_compiled_mapped.bam


#kept getting error while binning that an MD tag was missing
#fixed this using samtools calmd function to properly format

samtools calmd -u p1_compiled_mapped.bam /home/lexi/Pumice/compiled_contigs/spades_compiled/contigs.fasta > p1_compiled_mapped_nm.bam
samtools calmd -u p2_compiled_mapped.bam /home/lexi/Pumice/compiled_contigs/spades_compiled/contigs.fasta > p2_compiled_mapped_nm.bam
samtools calmd -u p3_compiled_mapped.bam /home/lexi/Pumice/compiled_contigs/spades_compiled/contigs.fasta > p3_compiled_mapped_nm.bam


#sort and index bam files using samtools

samtools sort p1_compiled_mapped_nm.bam > p1_compiled_mapped_sort.bam
samtools index p1_compiled_mapped_sort.bam

samtools sort p2_compiled_mapped_nm.bam > p2_compiled_mapped_sort.bam
samtools index p2_compiled_mapped_sort.bam

samtools sort p3_compiled_mapped_nm.bam > p3_compiled_mapped_sort.bam
samtools index p3_compiled_mapped_sort.bam


#bin with Metabat

/home/lexi/miniconda3/envs/metabat/bin/runMetaBat.sh --unbinned -v -m 1500 ./spades_compiled/contigs.fasta ./p1_compiled/p1_compiled_mapped_sort.bam ./p2_compiled/p2_compiled_mapped_sort.bam ./p3_compiled/p3_compiled_mapped_sort.bam > compiled_metabat_log.txt


#use checkm to pull out marker genes

checkm lineage_wf -x fa compiled_metabat_bins/ ./compiled_markers


#output qa table to a text file for easy reading
#done in markers directory

checkm qa ./lineage.ms . -f compiled_metabins.txt


#output marker genes to fasta file

checkm qa -o 9 ./lineage.ms . -f markergenes_compiled_.fasta


#break up marker fasta file into files for individual bins (do this in order to BLAST marker genes)
#use grep to do this, print matches and the following line to new files

grep -A 1 ">bin.1 " markergenes_compiled.fasta > bin1_markers_compiled.fasta
grep -A 1 ">bin.2" markergenes_compiled.fasta > bin2_markers_compiled.fasta
grep -A 1 ">bin.3" markergenes_compiled.fasta > bin3_markers_compiled.fasta
grep -A 1 ">bin.4" markergenes_compiled.fasta > bin4_markers_compiled.fasta
grep -A 1 ">bin.5" markergenes_compiled.fasta > bin5_markers_compiled.fasta
grep -A 1 ">bin.6" markergenes_compiled.fasta > bin6_markers_compiled.fasta
grep -A 1 ">bin.7" markergenes_compiled.fasta > bin7_markers_compiled.fasta
grep -A 1 ">bin.8" markergenes_compiled.fasta > bin8_markers_compiled.fasta
grep -A 1 ">bin.9" markergenes_compiled.fasta > bin9_markers_compiled.fasta
grep -A 1 ">bin.10" markergenes_compiled.fasta > bin10_markers_compiled.fasta
grep -A 1 ">bin.11" markergenes_compiled.fasta > bin11_markers_compiled.fasta
grep -A 1 ">bin.12" markergenes_compiled.fasta > bin12_markers_compiled.fasta
grep -A 1 ">bin.13" markergenes_compiled.fasta > bin13_markers_compiled.fasta
grep -A 1 ">bin.14" markergenes_compiled.fasta > bin14_markers_compiled.fasta
grep -A 1 ">bin.15" markergenes_compiled.fasta > bin15_markers_compiled.fasta
grep -A 1 ">bin.16" markergenes_compiled.fasta > bin16_markers_compiled.fasta
grep -A 1 ">bin.lowDepth" markergenes_compiled.fasta > lowDepth_markers_compiled.fasta
grep -A 1 ">bin.unbinned" markergenes_compiled.fasta > unbinned_markers_compiled.fasta
